@{
    ViewData["Title"] = "Create Company";
}
@model CompanyDto
<form asp-controller="Company" method="post" asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-Black text-center">Create Company</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Name" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Address" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="PhoneNumber" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="EmailAddress" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>