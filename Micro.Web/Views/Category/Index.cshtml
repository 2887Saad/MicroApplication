@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<CategoryDto>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create
            </a>
        </div>
    </div>
    <table class="table table-borderd table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Category" asp-action="Update" asp-route-CategoryId="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                            Update
                        </a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@item.Id">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>