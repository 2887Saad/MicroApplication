@{
    ViewData["Title"] = "Update Category";
}
@model CategoryDto
<form asp-controller="Category" method="post" asp-action="Update">
    <br />
    <div class="container border p-3">
        <h1 class="text-Black text-center">Update Category</h1>
        <input asp-for="Id" hidden/>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Name" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Type" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Description" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>